alias a='alias'
alias c='clear'
alias ..='cd ..'

# Git
alias gs='git status'
alias ga='git add'
alias gaa='git add .'
alias gd='git diff'
alias gdc='git diff --cached'
alias gcm='git commit --message'
alias gca='git commit --amend'
alias gwip='git add -A; git rm $(git ls-files --deleted) 2> /dev/null; git commit --no-verify --no-gpg-sign -m "--wip-- [skip ci]"'
alias gunwip='git log -n 1 | grep -q -c "\-\-wip\-\-" && git reset HEAD~1'
alias git-revert-last-commit='git reset --soft HEAD~1'
alias git-delete-branches='git branch | grep -v "master\|develop\|main" | xargs git branch -D'

# Vim
alias v='nvim'
alias vi='nvim'
alias vim='nvim'

# Sed
alias sed='gsed'

# Work
alias gpom="git push origin master"
alias gpf='git push --force-with-lease'
alias gfi='git fetch origin (__git.current_branch):master && gpom'
alias 'gfi!'='git fetch origin (__git.current_branch):master && gpom && git checkout master'
alias gfim='git fetch origin (__git.current_branch):main && git push origin main'
alias 'gfim!'='git fetch origin (__git.current_branch):main && git push origin main && git checkout main'
alias glol="git log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
alias glola="git log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --all"
